
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Success View</title>
</head>
<body>
    <div>

        <link href="~/Content/Success_Failer.css" rel="stylesheet" />

        <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
        <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
        <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
        <!------ Include the above in your HEAD tag ---------->
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <br />
                    <br />
                    <div class="error-template">
                        @if ((string)Session["paymentmethod"] == "PayPal")
                        {
                        <h3 class="label label-success" style="font-size: 25px;">
                            Payment has been successfully done!&nbsp;
                            Your Order is in pending list!
                        </h3>
                            
                           
                        }
                        else if ((string)Session["paymentmethod"] == "Cash On Delivery")
                        {
                            <h1 class="label label-success" style="font-size: 35px;">
                                
                                Your Order is in pending list!
                            </h1>
                        }
                        <br />
                        <br />
                        <br />
                        <div class="error-actions">
                            <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-lg">
                                <span class="glyphicon glyphicon-home"></span>
                                Take Me Home
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
